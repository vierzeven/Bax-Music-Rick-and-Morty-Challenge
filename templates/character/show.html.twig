{% extends 'base.html.twig' %}

{% block content %}

    <div class="rambutton">
        {{ character.name }}
    </div>

    <img class="characterimage" src="{{ character.image }}" alt="Picture of {{ character.name }}">
    <table>
        <tr>
            <td>Status:</td>
            <td>{{ character.status }}</td>
        </tr>
        <tr>
            <td>Species:</td>
            <td>{{ character.species }}</td>
        </tr>
        <tr>
            <td>Type:</td>
            <td>{{ character.type }}</td>
        </tr>
        <tr>
            <td>Gender:</td>
            <td>{{ character.gender }}</td>
        </tr>
    </table>

{% endblock %}





